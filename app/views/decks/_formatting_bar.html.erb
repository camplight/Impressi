<div class='navbar'>
  <h2 <%= "#{redirect_popup?}" %> class='edit-title'><a href=<%= user_signed_in? ? "/users/#{current_user.id}" : '/' %> style="pointer-events: auto;">impressi</a></h2>
  
  <a class='ux_button button add_slide alter' style="pointer-events: auto;">Add slide</a>
  <a class='ux_button button delete_slide alter' style="pointer-events: auto">Remove slide</a>

	<div class='selectors'>
		<div class='template'>
			Template:
			<select class='temp-dropdown' name='temp-dropdown'>
	      <% template_data.each_with_index do |template, i| %>
				  <option value='<%= template[:template_id] %>' <%= " selected='selected'" if deck.template_id == (i + 1) %>><%= template[:name] %></option>
			  <% end %>
			</select>
		</div>
	
		<div class='template'>Font size:
      <select class='size-dropdown' name='size-dropdown'>
        <option value='48'>48</option>
        <option value='64'>64</option>
        <option value='80'>80</option>
        <option value='100'>100</option>
        <option value='120'>120</option>
        <option value='150'>150</option>
        <option value='200'>200</option>
      </select>
    </div>
	</div>
	
  <div class='ux-helper'>
  </div>
	
	<div id='menu-right'>
		<a id='preview-button' class='button alter' style="pointer-events: auto;" data-logged-in="<%= user_signed_in? %>">Preview</a>
		<div id='format-button' class='button alter' style='pointer-events:auto;display:inline-block;'>Formatting</div>
	</div>
</div>

<div id='preview-mode'>
	<%= link_to "Impress!", impress_button_link_path, :class => 'button alter', :id => 'impress-button' %>																				
	<%= link_to "Edit", '#', :class => 'button edit-button alter' %>
</div>
	
